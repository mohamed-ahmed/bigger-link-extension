{
  "manifest_version": 2,

  "name": "Bigger Link Text",
  "description": "Make text links appear as big as you want. Easier to select when using a touch screen.",
  "version": "1.0",

  "permissions": [
    "tabs", "<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.1.0.min.js", "popup.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}